<%= content_for :title, "Edit #{resource.display_name(@record)}" %>

<!-- Breadcrumb -->
<nav aria-label="breadcrumb" class="mb-4">
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <%= link_to resource.friendly_name.pluralize, resource.index_path, class: "text-decoration-none" %>
    </li>
    <li class="breadcrumb-item">
      <%= link_to resource.display_name(@record), resource.show_path(@record), class: "text-decoration-none" %>
    </li>
    <li class="breadcrumb-item active" aria-current="page">
      Edit
    </li>
  </ol>
</nav>

<!-- Page Header -->
<div class="mb-4">
  <h1 class="h3 fw-bold text-dark mb-1">Edit <%= resource.display_name(@record) %></h1>
  <p class="text-muted mb-0">Update <%= resource.friendly_name.downcase %> information</p>
</div>

<!-- Form -->
<div class="card">
  <div class="card-body">
    <%= render partial: "form", locals: { record: @record, resource: resource } %>
  </div>
</div>
